<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mx_picker_color_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="1dp">

    <com.mx.imgpicker.views.MXSquareImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/folderNameTxv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="全部"
        android:textColor="@color/mx_picker_color_important"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/imgSizeTxv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:alpha="0.5"
        android:text="(0)"
        android:textColor="@color/mx_picker_color_important"
        android:textSize="16sp"  />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/selectTag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/mx_icon_picker_select"
        android:tint="@color/mx_picker_color_select" />
</LinearLayout>