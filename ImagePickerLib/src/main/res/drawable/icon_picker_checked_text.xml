<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/picker_color_select" />
            <stroke android:width="1.3dp" android:color="@color/picker_color_select" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="100dp" />
            <stroke android:width="1.3dp" android:color="@android:color/white" />
        </shape>
    </item>

</selector>