<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mx.imgpicker">

    <application>
        <provider
            android:name="com.mx.imgpicker.utils.MXImagePickerProvider"
            android:authorities="${applicationId}.imagePickerProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/image_picker_file_paths" />
        </provider>
        <activity
            android:name="com.mx.imgpicker.app.ImgPickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>
</manifest>